all : doc
	cd src/pdf && %MAKE% all

debug :
	cd src/pdf && %MAKE% clean debug

test-coverage :
	export CC_COV_OPT="-fprofile-arcs -ftest-coverage";\
	export LD_COV_OPT="-coverage -lgcov";\
	%MAKE% clean test;\
	cd src/pdf && %MAKE% coverage-reports

test : all
	@prove -e'perl6 -I .' -v t

memtest : all
	@prove -e'perl6-valgrind-m -I .' -v t

clean :
	cd src/pdf && %MAKE% $@

realclean :
	@rm -f Makefile;\
	cd src/pdf && %MAKE% $@


doc : docs/index.md

docs/index.md : README.md
	cp $< $@
